{
    "manifest_version": 2,
    
    "name": "CunningDJ Read Mode Extension",
    "version": "1.0",
    "description": "Dark read mode extensionby CunningDJ (David Cunningham).",
    "icons": { "32": "cdj-icon.png" },
    "permissions": ["activeTab", "tabs"],
    "background": {
        "scripts": ["main.js", "readMode.js"],
        "persistent": false
    },
    "content_scripts": [{
        "js": ["readMode.js", "main.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "browser_action": {
        "default_title": "READMODE_DEFAULT_TITLE",
        "default_icon": "cdj-icon.png"
    }
}
